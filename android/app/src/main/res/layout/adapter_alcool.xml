<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="6dp"
    android:layout_marginTop="20dp"

    android:orientation="vertical"



    app:layout_constraintCircleRadius="1dp"
    tools:context=".adapter.alcoolAdapter">


    <android.support.v7.widget.CardView

        android:layout_width="0dp"

        android:layout_height="137dp"
        android:maxWidth="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bairroViewAlcoolBuscar"
                android:layout_width="0dp"
                android:layout_height="55dp"

                android:layout_marginBottom="48dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:foregroundGravity="center"
                android:gravity="center"


                android:text="TextView"
                android:textColor="@color/content_text_color"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/TituloViewAlcoolBuscar"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"

                android:background="#ffffff"

                android:gravity="center"

                android:text="TextView"
                android:textColor="@color/preto"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/dieselAdBuscar"
                tools:layout_editor_absoluteY="4dp" />

            <Button
                android:id="@+id/buttonLinkAlcoolBuscar"
                android:layout_width="123dp"
                android:layout_height="36dp"

                android:layout_marginEnd="4dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_directions_black_24dp"
                android:text="Ver no Mapa"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/dieselAdBuscar"
                android:layout_width="103dp"
                android:layout_height="36dp"


                android:layout_marginEnd="8dp"
                android:background="#ffffff"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textColor="#410372"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/distanciaKMAlcoolBuscar"
                android:layout_width="114dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buttonLinkAlcoolBuscar"
                app:layout_constraintHorizontal_bias="0.445"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/dataviewAlcoolBuscar"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/white"
                android:foregroundGravity="center"
                android:gravity="center|left"
                android:paddingLeft="3dp"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:paddingBottom="5dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#410372"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/dieselAdBuscar"
                tools:layout_editor_absoluteX="0dp"
                tools:ignore="MissingConstraints" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_alcool"
                android:layout_width="75dp"
                android:layout_height="37dp"
                android:src="@drawable/menor"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/addAlcool"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@android:color/white"


                android:src="@drawable/ic_add_circle_roxo_24dp"
                app:layout_constraintEnd_toEndOf="@+id/TituloViewAlcoolBuscar"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>